extends layout

block content
  script(src='/javascripts/raphael.min.js')
  script(src='/javascripts/paint.js')
  .row.page-header
    .col-lg-12
      h1 Image 1
  .row
    .col-xs-12.col-md-12
      .row
        .col-xs-12.col-sm-12.location-map
          .panel#pnlSurgery.panel-primary
